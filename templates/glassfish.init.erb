#!/bin/bash
# chkconfig: 2345 64 36
# description: GlassFish is a Java Application Server for the <%= gfdomain %> domain.
# processname: glassfish
# pidfile: /var/run/glassfish.pid

# source function library
. /etc/init.d/functions

RETVAL=0
GLASSFISH_BIN="/opt/glassfish/bin"
GLASSFISH_USER="glassfish"
GLASSFISH_LOCK="/var/lock/subsys/glassfish-<%= gfdomain %>"
GLASSFISH_PID="/var/run/glassfish-<%= gfdomain %>.pid"

start() {
    echo -n $"Starting Glassfish: "
    daemon --user $GLASSFISH_USER --pidfile $GLASSFISH_PID "$GLASSFISH_BIN/asadmin start-domain <%= gfdomain %> >/dev/null"
    RETVAL=$?
    PID=$(pgrep -u $GLASSFISH_USER java)
    if [ $RETVAL -eq 0 ]; then
        touch $GLASSFISH_LOCK
        echo $PID > $GLASSFISH_PID
    fi
    echo
}

stop() {
    echo -n $"Shutting down Glassfish: "
    killproc -p $GLASSFISH_PID glassfish
    RETVAL=$?
    [ $RETVAL -eq 0 ] && rm -f $GLASSFISH_LOCK
    echo
}

case "$1" in
    start)
        start
    ;;
    stop)
        stop
    ;;
    restart|reload)
        stop
        start
    ;;
    condrestart)
        if [ -f $GLASSFISH_LOCK ]; then
            stop
            start
        fi
    ;;
    status)
        status -p $GLASSFISH_PID glassfish
        RETVAL=$?
    ;;
    *)
        echo $"Usage: $0 {start|stop|restart|condrestart|status}"
        exit 1
esac
exit $RETVAL
